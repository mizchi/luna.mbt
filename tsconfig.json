{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "strict": true,
    "jsx": "react-jsx",
    "jsxImportSource": "@luna_ui/luna",
    "noEmit": true,
    "skipLibCheck": true,
    "baseUrl": "."
  },
  "include": [
    "js/**/*.ts",
    "js/**/*.tsx"
  ],
  "exclude": [
    "js/wcssr/**",
    "js/sol/src/cli.ts",
    "js/luna/tests/**",
    "js/luna/examples/**",
    "js/luna/examples_preact/**"
  ]
}