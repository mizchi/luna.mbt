{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "strict": true,
    "jsx": "react-jsx",
    "jsxImportSource": "@mizchi/kaguya",
    "noEmit": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@mizchi/kaguya": ["./packages/ui"],
      "@mizchi/kaguya/*": ["./packages/ui/*"]
    }
  },
  "include": ["packages/**/*.ts", "packages/**/*.tsx"]
}
