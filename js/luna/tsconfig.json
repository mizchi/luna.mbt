{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "strict": true,
    "jsx": "react-jsx",
    "jsxImportSource": "@mizchi/luna",
    "noEmit": true,
    "skipLibCheck": true,
    "paths": {
      "@mizchi/luna": ["./src/index.ts"],
      "@mizchi/luna/jsx-runtime": ["./src/jsx-runtime.ts"]
    }
  },
  "include": [
    "src/**/*.ts",
    "tests/**/*.ts",
    "tests/**/*.tsx"
  ]
}