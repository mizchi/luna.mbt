{
  "name": "@luna_ui/components",
  "version": "0.1.0",
  "description": "Headless UI components matching src/components APG patterns",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./accordion": {
      "types": "./dist/accordion/index.d.ts",
      "import": "./dist/accordion/index.js"
    },
    "./checkbox": {
      "types": "./dist/checkbox/index.d.ts",
      "import": "./dist/checkbox/index.js"
    },
    "./switch": {
      "types": "./dist/switch/index.d.ts",
      "import": "./dist/switch/index.js"
    },
    "./dialog": {
      "types": "./dist/dialog/index.d.ts",
      "import": "./dist/dialog/index.js"
    },
    "./tabs": {
      "types": "./dist/tabs/index.d.ts",
      "import": "./dist/tabs/index.js"
    },
    "./slider": {
      "types": "./dist/slider/index.d.ts",
      "import": "./dist/slider/index.js"
    },
    "./radio": {
      "types": "./dist/radio/index.d.ts",
      "import": "./dist/radio/index.js"
    },
    "./tooltip": {
      "types": "./dist/tooltip/index.d.ts",
      "import": "./dist/tooltip/index.js"
    },
    "./hydrate": {
      "types": "./dist/hydrate/index.d.ts",
      "import": "./dist/hydrate/index.js"
    },
    "./hydrate/*": {
      "types": "./dist/hydrate/*.d.ts",
      "import": "./dist/hydrate/*.js"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsdown src/index.ts src/*/index.ts src/hydrate/*.ts --format esm --dts --clean",
    "test": "vitest",
    "typecheck": "tsc --noEmit"
  },
  "devDependencies": {
    "jsdom": "^27.4.0",
    "tsdown": "^0.9.3",
    "typescript": "^5.7.2",
    "vitest": "^3.0.2"
  },
  "keywords": [
    "headless",
    "ui",
    "components",
    "accessibility",
    "a11y",
    "aria",
    "apg"
  ],
  "license": "MIT"
}
