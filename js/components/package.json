{
  "name": "@luna_ui/components",
  "version": "0.1.0",
  "description": "Headless UI components matching src/components APG patterns",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./core": {
      "types": "./dist/core.d.ts",
      "import": "./dist/core.js"
    },
    "./accordion": {
      "types": "./dist/accordion.d.ts",
      "import": "./dist/accordion.js"
    },
    "./checkbox": {
      "types": "./dist/checkbox.d.ts",
      "import": "./dist/checkbox.js"
    },
    "./switch": {
      "types": "./dist/switch.d.ts",
      "import": "./dist/switch.js"
    },
    "./dialog": {
      "types": "./dist/dialog.d.ts",
      "import": "./dist/dialog.js"
    },
    "./tabs": {
      "types": "./dist/tabs.d.ts",
      "import": "./dist/tabs.js"
    },
    "./slider": {
      "types": "./dist/slider.d.ts",
      "import": "./dist/slider.js"
    },
    "./radio": {
      "types": "./dist/radio.d.ts",
      "import": "./dist/radio.js"
    },
    "./tooltip": {
      "types": "./dist/tooltip.d.ts",
      "import": "./dist/tooltip.js"
    },
    "./hydrate": {
      "types": "./dist/hydrate.d.ts",
      "import": "./dist/hydrate.js"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsdown src/*.ts --format esm --dts --clean",
    "test": "vitest",
    "typecheck": "tsc --noEmit"
  },
  "devDependencies": {
    "jsdom": "^27.4.0",
    "tsdown": "^0.9.3",
    "typescript": "^5.7.2",
    "vitest": "^3.0.2"
  },
  "keywords": [
    "headless",
    "ui",
    "components",
    "accessibility",
    "a11y",
    "aria",
    "apg"
  ],
  "license": "MIT"
}
